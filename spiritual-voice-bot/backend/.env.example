# Spiritual Voice Bot Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# ANTHROPIC API KEY (REQUIRED for LLM-powered conversational responses)
# ============================================================================
# Get your API key from: https://console.anthropic.com/
# Without this key, the bot will use basic template responses
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ============================================================================
# OPTIONAL API KEYS
# ============================================================================
# OpenAI API Key (if you want to use OpenAI models instead)
OPENAI_API_KEY=

# HuggingFace Token (for downloading models)
HUGGINGFACE_TOKEN=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# ============================================================================
# MODEL SETTINGS
# ============================================================================
# Embedding Model
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
EMBEDDING_DIM=768

# Voice Settings
ASR_LANGUAGE=en  # en or hi
TTS_LANGUAGE=en  # en or hi

# RAG Settings
RETRIEVAL_TOP_K=5
RERANK_TOP_K=3
MIN_SIMILARITY_SCORE=0.3

# ============================================================================
# DATABASE SETTINGS
# ============================================================================
# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=sanatan_scriptures
